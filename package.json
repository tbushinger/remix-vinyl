{
  "name": "remix-vinyl",
  "version": "1.0.0",
  "description": "virtaul file/document storage system",
  "main": "index.js",
  "scripts": {
    "start": "node ./index",
    "test": "nyc mocha",
    "build-ts": "tsc",
    "watch-ts": "tsc -w"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tbushinger/remix-vinyl.git"
  },
  "author": "Anthony J Bushinger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tbushinger/remix-vinyl/issues"
  },
  "homepage": "https://github.com/tbushinger/remix-vinyl#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "fs-extra": "^6.0.1",
    "hapi": "^17.x",
    "lodash": "^4.17.10",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/assert": "0.0.31",
    "@types/chai": "^4.1.3",
    "@types/lodash": "^4.14.108",
    "@types/mocha": "^5.2.0",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  }
}
