{
  "name": "remix-vinyl",
  "version": "1.0.0",
  "description": "virtaul file/document storage system",
  "main": "index.js",
  "scripts": {
    "basic:help": "echo these are your standard node build, start, and test commands",
    "start": "node ./dist/index",
    "test": "nyc mocha",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "image:help": "commands for building and pushing the docker images",
    "image:build": "npm run build-ts && docker build . -t tbushinger/remix-vinyl",
    "image:push": "docker push tbushinger/remix-vinyl",
    "docker:help": "commands for docker maintenance",
    "docker:clean": "docker system prune --volumes -f",
    "docker:reset": "docker system prune --volumes -a -f",
    "dev:up": "docker-compose up -d remix-vinyl && docker-compose logs",
    "ha": "docker-compose -f docker-compose.yml -f docker-compose.ha.yml up -d && docker-compose logs",
    "ha:down": "docker-compose -f docker-compose.yml -f docker-compose.ha.yml down",
    "down": "docker-compose down",
    "_demo_up": "docker-compose -f docker-compose.yml -f docker-compose.demo.yml up -d remix-vinyl",
    "_demo_run": "docker-compose -f docker-compose.yml -f docker-compose.demo.yml run demo-curl",
    "demo": "npm run _demo_up && npm run _demo_run && npm run down" 
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tbushinger/remix-vinyl.git"
  },
  "author": "Anthony J Bushinger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tbushinger/remix-vinyl/issues"
  },
  "homepage": "https://github.com/tbushinger/remix-vinyl#readme",
  "dependencies": {
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "fs-extra": "^6.0.1",
    "lodash": "^4.17.10",
    "mongodb": "^3.0.10",
    "redis": "^2.8.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/assert": "0.0.31",
    "@types/bluebird": "^3.5.20",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.3",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.2",
    "@types/lodash": "^4.14.108",
    "@types/mocha": "^5.2.0",
    "@types/mongodb": "^3.0.21",
    "@types/redis": "^2.8.6",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  }
}
